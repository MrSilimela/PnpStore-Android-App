<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pnp.store.online.Fragments.CartFragment"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/lvCart"
        android:layout_height="430dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cart_empty"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:visibility="gone"
        android:id="@+id/emptyElement" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:text="Total Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTotal"
            android:textColor="#F22613"
            android:textSize="16sp"
            android:textStyle="normal|italic"
            android:textAllCaps="false"
            android:textAlignment="center"
            />
        <Button
            android:text="Click here to checkout your cart"
            android:id="@+id/btnCheckout"
            android:elevation="5dp"
            android:backgroundTint="#F22613"
            android:layout_weight="0.34"
            android:textColor="#52B3D9"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:visibility="visible"
            android:layout_below="@+id/tvTotal"
            android:background="@drawable/button_shape4"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="50sp"
            android:visibility="gone"
            android:layout_below="@+id/btnCheckout"
            android:id="@+id/EmptySpace" />

        <Button
            android:text="Or click here to continue shopping"
            android:id="@+id/btnReturn"
            android:elevation="5dp"
            android:backgroundTint="#52B3D9"
            android:layout_weight="0.34"
            android:textColor="#F22613"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:visibility="visible"
            android:background="@drawable/button_shape3"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EmptySpace"/>


    </LinearLayout>

</RelativeLayout>
